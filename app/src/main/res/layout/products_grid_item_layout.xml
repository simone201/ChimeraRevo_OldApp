<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true" >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/prod_list_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_descr_general"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <com.pnikosis.materialishprogress.ProgressWheel
            xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:id="@+id/prod_list_img_progress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            wheel:matProg_barColor="@color/colorPrimaryDark"
            wheel:matProg_progressIndeterminate="true" />

        <TextView
            android:id="@+id/prod_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/prod_list_img"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:textColor="@android:color/white"
            android:background="@color/actionbar_color_def"
            android:adjustViewBounds="true"
            android:textSize="15sp"
            android:fontFamily="sans-serif-bold" />

        <TextView
            android:id="@+id/prod_list_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/prod_list_name"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
            android:adjustViewBounds="true"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light" />

    </RelativeLayout>

</android.support.v7.widget.CardView>