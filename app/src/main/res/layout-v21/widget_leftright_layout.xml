<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="46dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@android:color/white" >

        <ImageButton
            android:id="@+id/widget_navigate_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_arrow_left"
            android:background="@drawable/cards_list_item_background"
            android:contentDescription="@string/content_descr_general" />

        <LinearLayout
            android:id="@+id/widget_post_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:textColor="@android:color/black"
                android:adjustViewBounds="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/post_date_cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"
                android:adjustViewBounds="true"
                android:textSize="14sp"
                android:fontFamily="sans-serif-condensed" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/widget_navigate_forward"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_arrow_right"
            android:background="@drawable/cards_list_item_background"
            android:contentDescription="@string/content_descr_general" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/widget_refresh_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:elevation="6dp"
            android:layout_marginTop="22dp"
            android:layout_gravity="end|bottom"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_refresh_fab"
            android:contentDescription="@string/content_descr_general" />

    </FrameLayout>

</FrameLayout>